<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="3dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center">
<RelativeLayout
    android:layout_width="100dp"
    android:layout_height="90dp">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/btnHead"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:padding="1dp"
        android:src="@drawable/headoffice" />
    <TextView
        android:id="@+id/textsim1"
      android:layout_marginTop="2dp"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="Head Office"
        android:gravity="center"
        android:layout_below="@id/btnHead"/>

</RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="90dp">

                <ImageView
                    android:contentDescription="@null"
                    android:layout_marginTop="4dp"
                    android:id="@+id/btnCorp"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:padding="1dp"
                    android:src="@drawable/corporate" />
                <TextView
                    android:id="@+id/textsim2"
                    android:layout_marginTop="2dp"
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Corporate Office"
                    android:layout_below="@id/btnCorp"/>

            </RelativeLayout>




        </LinearLayout>
    </RelativeLayout>





</RelativeLayout>